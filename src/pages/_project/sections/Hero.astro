---
import Trans from '../../../i18n/utils.astro'
import SectionComponent from '../../../components/Section.astro'
import HeadingComponent from '../../../components/Heading.astro'
import TagGroupComponent from '../../../components/TagGroup.astro'

const {
  lang='',
  portfolio={}
} = Astro.props
---

<SectionComponent className="top internal hero portfolios d-flex align-items-center">
  <div class="container">
    <div class="row d-flex align-items-center">
      <div class="col-12 col-md-6">
        <span class="color-lila">
          <strong>
            <Trans i18nKey='pagesProjects:hero-title' />:
          </strong>
        </span>
        <HeadingComponent level={1}>
          {portfolio.name}
        </HeadingComponent>
        <TagGroupComponent tags={portfolio.tags} />
        <a 
          href={portfolio.link} 
          class="btn btn-warning" 
          target="_blank" 
          rel="opener noreferrer"
          aria-label={portfolio.name}
          title="opens in a new window"
        >
          <Trans i18nKey='pagesProjects:portfolio-btn-go' />
        </a>
      </div>
      <div class="col-12 col-md-6 intro_project">
        <HeadingComponent level={2}>
          {portfolio.paragraph?.[lang]}
        </HeadingComponent>
      </div>
    </div>
  </div>
</SectionComponent>