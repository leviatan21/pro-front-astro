---
import Trans from '../../../i18n/utils.astro'
import SectionComponent from '../../../components/Section.astro'
import HeadingComponent from '../../../components/Heading.astro'
import TagGroupComponent from '../../../components/TagGroup.astro'

const {
  tags=[]
} = Astro.props
---

<SectionComponent className='section-4'>
  <div class="container">
    <div class="row d-flex">
      <div class="col-12 col-md-4 col-lg-2 d-flex align-items-center mb20">
        <HeadingComponent level={2} className='h5 uppercase'>
          <Trans i18nKey='pagesHome:whatwedo-heading-5' />
          <br/>
          <span class="accent1">
            <Trans i18nKey='pagesHome:whatwedo-accent' />
          </span>
          <br/>
          <span class="rayita_azul queusamos">
            <Trans i18nKey='pagesHome:whatwedo-use' />
          </span>
        </HeadingComponent>
      </div>
      <div class="col-12 col-md-8 col-lg-10 d-flex align-items-center">
        <TagGroupComponent tags={tags} />
      </div>
    </div>
  </div>  
</SectionComponent>
