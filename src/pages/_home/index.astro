---
import Layout from '../../layouts/Layout.astro'
import HeroSection from './sections/Hero.astro'
import ParallaxSection from './sections/Parallax.astro'
import WhatWeDoSection from './sections/WhatWeDo.astro'
import ServicesSection from './sections/Services.astro'
import QuotesSection from './sections/Quotes.astro'
import UsSection from './sections/Us.astro'
import PortfoliosSection from './sections/Portfolios.astro'
import BottonComponent from '../../components/Botton.astro'

import ServicesContent from './content/services.json'
import TechContent from './content/tech.json'
import QuotesContent from './content/quotes.json'
import CardsContent from './content/cards.json'

const lang = Astro.currentLocale
---

<Layout page='Home'>
  <HeroSection lang={lang} />
  <ParallaxSection lang={lang} />
  <WhatWeDoSection lang={lang} tags={ServicesContent} />
  <ServicesSection lang={lang} tags={TechContent} />
  <QuotesSection lang={lang} quotes={QuotesContent} />
  <UsSection lang={lang} />
  <PortfoliosSection lang={lang} cards={CardsContent} />
  <BottonComponent lang={lang} />
</Layout>
